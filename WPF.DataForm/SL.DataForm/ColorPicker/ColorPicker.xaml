                                        <Slider Grid.Row="3" Grid.Column="2" x:Name="SliderB" Width="120" Height="20" Style="{StaticResource SliderCustomizedStyle}" Orientation="Horizontal" Maximum="255" SmallChange="1" VerticalAlignment="Center">
